<% layout("/layouts/boilerplate") %>
<div class="row mt-3">  <!--margin from top=3-->
    <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing_detail._id %>?_method=PUT">  <!--to convert this post to put request we install a special package called npm i method-override-->
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="listing[title]" value="<%= listing_detail.title %>" type="text" class="form-control"/> 
        </div>

        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea input name="listing[description]" class="form-control"><%= listing_detail.description %></textarea>
        </div>

        <div class="mb-3">
            <lable for="image" class="form-label">Image</lable>
            <input name="listing[image]" value="<%= listing_detail.image %>" type="text" class="form-control" />
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">Price</lable>
            <input name="listing[price]" value="<%= listing_detail.price %>" type="number" class="form-control" />
        </div>

        <div class="mb-3 col-md-4">
            <lable for="country" class="form-label">Country</lable>
            <input name="listing[country]" value="<%= listing_detail.country %>" type="text" class="form-control" />
        </div>
        </div>
        
        <div class="mb-3">
            <lable for="location" class="form-label">location</lable>
            <input name="listing[location]" value="<%= listing_detail.location %>" type="text" class="form-control" />
        </div>

        <button class="btn btn-dark edit-btn mt-2 mb-3">Edit</button>
        <br></br>
        
    </form>
  </div>
</div>
